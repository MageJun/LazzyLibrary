<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="XYDJAppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="XYDJAppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="XYDJAppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ShareTranStyle" parent="XYDJAppTheme">
        <item name="android:windowBackground">@color/transparent_bg</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="CityListTextStyle">
        <item name=" android:paddingTop">8dp</item>
           <item name= "android:paddingBottom">8dp</item>
           <item name= "android:paddingRight">20dp</item>
           <item name= "android:paddingLeft">20dp</item>
           <item name= "android:textSize">15sp</item>
           <item name= "android:textColor">@color/text_dark</item>
            <item name="android:background">@color/white</item>
            <item name="android:maxWidth">100dp</item>
    </style>

</resources>
