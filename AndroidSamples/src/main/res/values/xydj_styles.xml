<resources>

    <!-- Base application theme. -->
    <style name="XYDJAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="XYDJListItemText" >
        <item name="android:textSize">@dimen/xydj_list_item_textsize</item>
        <item name="android:textColor">@color/xydj_item_text_color</item>
    </style>

    <style name="XYDJUserInfoListItemStyle">
        <item name=" android:layout_width"> match_parent</item>
        <item name=" android:layout_height"> wrap_content</item>
        <item name=" android:padding"> 10dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name=" android:background"> @color/xydj_color_white</item>
        <item name="android:onClick">onClick</item>
        <item name="android:layout_marginTop"> 1dp</item>
    </style>

    <style name="XYDJGroupInfoItemStyle">
        <item name=" android:layout_width"> 0dp</item>
        <item name=" android:layout_height"> wrap_content</item>
        <item name=" android:background"> @color/xydj_color_white</item>
        <item name="android:onClick">onClick</item>
        <item name="android:layout_marginTop"> 1dp</item>
        <item name="android:paddingBottom">@dimen/xydj_group_member_info_item_padding_rl</item>
        <item name="android:paddingTop">@dimen/xydj_group_member_info_item_padding_rl</item>
    </style>

    <style name="XYDJPopupWindow">
        <item name="android:windowEnterAnimation">@anim/xydj_popup_window_enter</item>
        <item name="android:windowExitAnimation">@anim/xydj_popup_window_out</item>
    </style>
</resources>
