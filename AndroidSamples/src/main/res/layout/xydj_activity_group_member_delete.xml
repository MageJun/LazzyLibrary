<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/xydj_bg"
    android:focusableInTouchMode="true"
    android:clickable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/group_memeber_list_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/xydj_group_member_info_padding_rl"
        android:layout_marginRight="@dimen/xydj_group_member_info_padding_rl"
        android:layout_marginTop="@dimen/xydj_group_member_list_info_margih"
        android:background="@drawable/xydj_roungrect_bg"
        android:textSize="@dimen/xydj_text_size_1"
        android:textCursorDrawable="@null"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:drawableLeft="@drawable/search"
        android:hint="搜索"
        android:drawablePadding="2dp"
        />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/select_line"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="@color/xydj_color_white"
        android:paddingLeft="@dimen/xydj_group_member_info_padding_rl"
        android:layout_marginTop="@dimen/xydj_group_member_list_info_margih"
        app:layout_constraintTop_toBottomOf="@id/group_memeber_list_edit"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:visibility="visible">
        <android.support.constraint.Guideline
            android:id="@+id/guide_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.4"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/xydj_list_item_smaller_textsize"
            android:textColor="@color/xydj_group_member_detail_text_color"
            android:text="@string/xydj_group_member_delte_mychoice"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/guide_line"/>

        <ImageView
            android:id="@+id/select_more_icon"
            android:layout_width="@dimen/xydj_group_member_delete_select_arraw"
            android:layout_height="@dimen/xydj_group_member_delete_select_arraw"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@id/guide_line"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/arrow"
            android:scaleType="fitCenter"
            android:visibility="invisible"
            android:onClick="onClick"
            />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/select_list_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toLeftOf="@id/select_more_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@id/guide_line"
            app:layout_constraintLeft_toLeftOf="parent"
            android:scrollbars="horizontal"
            android:orientation="horizontal"
            android:overScrollMode="never"
            android:scrollbarThumbHorizontal="@drawable/xydj_recyclerview_scrollbar"
            android:scrollbarSize="5dp"
            android:layout_marginRight="@dimen/xydj_group_member_delete_item_div"></android.support.v7.widget.RecyclerView>

    </android.support.constraint.ConstraintLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/member_list_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/xydj_color_white"
        android:paddingTop="@dimen/xydj_group_member_info_padding_rl"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/select_line"
        app:layout_constraintBottom_toBottomOf="parent"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:layout_marginTop="2dp"
        />
</android.support.constraint.ConstraintLayout>