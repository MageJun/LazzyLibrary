<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include
        layout="@layout/include_pickerview_topbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pickerview_topbar_height" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/pickup_car_line"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:padding="5dp"
            android:gravity="center_horizontal"
            android:background="@drawable/gray_green_bg">
            <TextView
                android:id="@+id/tv_pickup_car"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取车时间"
                android:textColor="@color/white_gray"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/tv_pickup_car_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="05-06 14:33"
                android:textColor="@color/white_gray"
                android:textSize="12sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/back_car_line"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:padding="5dp"
            android:gravity="center_horizontal"
            android:background="@drawable/gray_green_bg">
            <TextView
                android:id="@+id/tv_back_car"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="还车时间"
                android:textColor="@color/white_gray"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/tv_back_car_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="05-06 14:33"
                android:textColor="@color/white_gray"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/timepicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal"
        >

        <com.contrarywind.view.WheelView
            android:id="@+id/year"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <com.contrarywind.view.WheelView

            android:id="@+id/month"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <com.contrarywind.view.WheelView
            android:id="@+id/day"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3" />

        <com.contrarywind.view.WheelView
            android:id="@+id/hour"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <com.contrarywind.view.WheelView
            android:id="@+id/min"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <com.contrarywind.view.WheelView
            android:id="@+id/second"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>


</LinearLayout>