<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusableInTouchMode="true"
    android:clickable="true"
    android:background="@color/xydj_bg">
    <EditText
        android:id="@+id/group_memeber_list_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/xydj_group_member_info_padding_rl"
        android:layout_marginRight="@dimen/xydj_group_member_info_padding_rl"
        android:layout_marginTop="@dimen/xydj_group_member_list_info_margih"
        android:background="@drawable/xydj_roungrect_bg"
        android:textSize="@dimen/xydj_text_size_1"
        android:textCursorDrawable="@null"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:drawableLeft="@drawable/search"
        android:hint="搜索"
        android:clickable="true"
        android:focusableInTouchMode="false"
        android:onClick="onClick"
        android:drawablePadding="2dp"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/member_list_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/group_memeber_list_edit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/xydj_group_member_info_item_padding_rl"
        android:paddingRight="@dimen/xydj_group_member_info_padding_rl"
        android:paddingLeft="@dimen/xydj_group_member_info_padding_rl"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:background="@color/xydj_color_white"
        ></androidx.recyclerview.widget.RecyclerView>

</androidx.constraintlayout.widget.ConstraintLayout>