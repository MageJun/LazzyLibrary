<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.baidu.mapapi.map.TextureMapView
        android:id="@+id/mapview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@+id/loc_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">
        <ImageView
            android:id="@+id/loc_marker"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/loc_marker_icon"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/request_loc_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/request_loc_icon"
        android:layout_gravity="left|bottom"
        android:onClick="onClick"
        android:layout_margin="20dp"/>

    <ImageView
        android:id="@+id/navi_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/map_navi_icon"
        android:layout_gravity="right|top"
        android:onClick="onClick"
        android:layout_margin="20dp"/>

</FrameLayout>